{
    "filters": {
        "auth": {
            "module": "norman-auth-server",
            "filter": "auth"
        },
        "jwt": {
            "module": "norman-auth-server",
            "filter": "jwt"
        },
        "xsrf": {
            "module": "norman-auth-server",
            "filter": "xsrf",
            "options": {
                "headerName": "X-CSRF-Token",
                "cookieName": "X-CSRF-Token"
            }
        }
    },
    "locations": [
        {
            "/api": [ "jwt", "auth" ]
        }
    ],
    "handlers": {
        "norman-auth-server": {
            "users": "/api/users",
            "auth": "/auth",
            "internal": "/internal"
        },
        "norman-audit-server": {}
    }
}